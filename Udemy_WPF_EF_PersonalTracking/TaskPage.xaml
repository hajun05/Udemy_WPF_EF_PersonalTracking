<Window x:Class="Udemy_WPF_EF_PersonalTracking.TaskPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Udemy_WPF_EF_PersonalTracking"
        mc:Ignorable="d"
        Title="TaskPage" Height="540" Width="800" Icon="/Icons/Logo.jpg" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" FontSize="18" FontWeight="Bold" Background="#FF8EAFF7" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            <Style TargetType="FrameworkElement">
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </Grid.Resources>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="UserNo" Height="34" Width="100"/>
            <TextBox x:Name="txtUserNo" IsEnabled="False" Grid.Column="1" TextWrapping="Wrap" Height="26"/>
            <Label Content="Name" Grid.Row="1" Height="34" Width="100"/>
            <TextBox x:Name="txtName" IsEnabled="False" Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Height="26"/>
            <Label Content="Surname" Grid.Row="2" Height="34" Width="100"/>
            <TextBox x:Name="txtSurname" IsEnabled="False" Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Height="26"/>

            <Label Content="Title" Grid.Row="3" Height="34" Width="100"/>
            <TextBox x:Name="txtTitle" Grid.Row="3" Margin="0" Grid.Column="1" TextWrapping="Wrap" Height="26"/>
            <Label Content="Content" Grid.Row="4" Height="34" Width="100"/>
            <TextBox x:Name="txtContent" Grid.Row="4" Grid.RowSpan="3" Margin="0, 10" Grid.Column="1" TextWrapping="Wrap"/>
            <Button x:Name="btnSave" Content="Save" Grid.Row="8" HorizontalAlignment="Right" Margin="0, 10, 0, 15" Width="140" Click="btnSave_Click"/>
            <Button x:Name="btnClose" Content="Close" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Center" Margin="0, 10, 0, 15" Width="140" Click="btnClose_Click"/>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>

            <Label Content="Department" Width="auto" Height="34"/>
            <ComboBox Name="cmbDepartment" Grid.Column="1" Grid.Row="0" Height="30" Margin="0" SelectionChanged="cmbDepartment_SelectionChanged"/>
            <Label Content="Position" Grid.Row="1" Width="auto" Height="34"/>
            <ComboBox Name="cmbPosition" Grid.Column="1" Grid.Row="1" Height="30" Margin="0"/>

            <DataGrid Grid.Row="2" Grid.ColumnSpan="2" Margin="0" Name="gridEmployee" AutoGenerateColumns="False" SelectionChanged="gridEmployee_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Width="*" Binding="{Binding Id}" Visibility="Hidden"/>
                    <DataGridTextColumn Header="UserNo" Width="*" Binding="{Binding UserNo}"/>
                    <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="SurName" Width="*" Binding="{Binding Surname}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
